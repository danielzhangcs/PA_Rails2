<% provide(:title, "Home Page") %>
<section class="py-5">
  <h2 class="text-center">Home Page</h2>

  <div class="container">
    <ul class="nav nav-tabs">

      <li class="nav-item">
        <a href="#course" class="nav-link active" data-toggle="tab">Course</a>
      </li>

      <li class="nav-item">
        <a href="#instructor" class="nav-link" data-toggle="tab">Instructor</a>
      </li>

      <li class="nav-item">
        <a href="#subject" class="nav-link" data-toggle="tab">Subject</a>
      </li>
    </ul>

    <div class="tab-content py-3">

      <div id="course" class="tab-pane active">
        <p class="text-center">
          Total Number: <%= @courses.size %>
        </p>
        <table class="table table-hover">
          <thead>
          <tr>
            <th class="text-center">Course Code</th>
            <th class="text-center">Course Name</th>
            <th class="text-center">Course Description</th>
          </tr>
          </thead>
          <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td class="text-center"><%= course.code %></td>
              <td class="text-center"><%= course.name %></td>
              <td class="text-center"><%= course.description %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <div id="instructor" class="tab-pane active">
        <p class="text-center">
          Total Number: <%= @instructors.size %>
        </p>
        <table class="table table-hover">
          <thead>
          <tr>
            <th class="text-center">Id</th>
            <th class="text-center">First Name</th>
            <th class="text-center">Last Name</th>
            <th class="text-center">Email</th>
          </tr>
          </thead>
          <tbody>
          <% @instructors.each do |instructor| %>
            <tr>
              <td class="text-center"><%= instructor.id %></td>
              <td class="text-center"><%= instructor.first %></td>
              <td class="text-center"><%= instructor.last %></td>
              <td class="text-center"><%= instructor.email %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>

      <div id="subject" class="tab-pane">
        <p class="text-center">
          Total Number: <%= @subjects.size %>
        </p>
        <table class="table table-hover">
          <thead>
          <tr>
            <th class="text-center">Id</th>
            <th class="text-center">Name</th>
            <th class="text-center">Abbreviation</th>
          </tr>
          </thead>
          <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td class="text-center"><%= subject.id %></td>
              <td class="text-center"><%= subject.name %></td>
              <td class="text-center"><%= subject.abbreviation %></td>
            </tr>
          <% end %>
          </tbody>

        </table>

      </div>

    </div>

  </div>
</section>
