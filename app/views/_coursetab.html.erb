<div class="tab-pane fade show active" id="course" role="tabpanel" aria-labelledby="course-tab">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Code</th>
        <th scope="col">Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr scope="row">
          <td><%= course.code %></td>
          <td><%= course.name %></td>
          <td><%= course.description %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>